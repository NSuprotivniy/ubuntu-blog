<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :title, placeholder: "Заголовок" %>
    <%= f.text_area :text, placeholder: "Статья" %>
  </div>
  <%= f.submit "Сохранить", class: "btn btn-large btn-primary" %>
<% end %>