<div class="center hero-unit">
<h1>Posts</h1>
<% @posts.each do |post| %>

<h2> <%= post.title %></h2>


 <div style="font-size: 0.7em;">
    <%= link_to 'Показать', action: :show, id: post.id %>
    <%= link_to 'Изменить', action: :edit, id: post.id %> 
    <%= link_to 'Удалить', { action: :destroy, id: post.id },
    method: :delete, data: { confirm: 'Вы уверены?' } %>
</div>

 <% end %>


<%= link_to 'Создать новый', action: :new %>
</div>